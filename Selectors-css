/* https://www.w3.org/TR/selectors-3/#specificity */
/* https://stackoverflow.com/questions/4148499/how-to-style-a-checkbox-using-css */
/* selectors */
li {
}
/* class */
.hello
/* id */
#name { 
}
/* note we can have only one class under the same name */
/*Star*/

* { 
border: 1px solid green;
background: #e0e0d1;
border-width: 1px;
 }

/*Descendant Selector*/

h1 a {
	color: red;
}

li a {
	color: red;
}
/*Adjacent Selector*/
h4 + ul {
	
	border: 2px solid red;
}

/*Attribute Selector*/
a[href="http://www.google.com"] {
	background: white;	
}
/*nth of type*/

ul:nth-of-type(1) {
	background: purple;
/*li:nth-of-type(3) {
	color: brown; */	
}
}
